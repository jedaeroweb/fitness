<section id="show-locker">
  <div class="row">
    <div class="col-12">
      <div class="card">
        <h3 class="card-header"><%=@locker.product.title %></h3>
      </div>
    </div>
  </div>
  <div class="row mt-3">
    <div class="col-12 col-xl-6">
      <%= link_to t(:link_list), admin_lockers_path(category: params[:category]), class: 'btn btn-secondary' %>
    </div>
    <div class="col-12 col-xl-6 text-end">
      <%= link_to t(:edit), edit_admin_locker_path(@locker), class: 'btn btn-secondary' %>
      <%= link_to t(:delete), admin_locker_path(@locker), data: { turbo_method: :delete, turbo_confirm: t(:delete_cascade_confirm) }, class: 'btn btn-danger' %>
    </div>
  </div>
</section>
