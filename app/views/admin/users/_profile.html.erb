<div class="row user-info">
  <div class="col-12 col-sm-6 p-3">
    <% if @user.user_picture.present? %>
      <a href="<%=@user.user_picture.picture.url %>" class="simple_image">
        <%=image_tag @user.user_picture.picture.medium_thumb.url,:width=>"100%",:height=>"100%",:id=>"profile_photo" %>
      </a>
    <% else %>
      <%=image_tag '/images/bg_photo_none.gif',:width=>"100%",:height=>"100%",:id=>"profile_photo" %>
    <% end %>
  </div>
  <div class="col-12 col-sm-6 p-3">
    <ul style="list-style:none;">
      <% unless @user.present? %>
      <li><span class="btn btn-sm btn-light btn-block btn-outline-info d-block">-</span>
      <li><span class="btn btn-sm btn-light btn-block btn-outline-info d-block">-</span>
      <% else %>
      <li>
        <span class="btn btn-sm btn-light btn-block btn-outline-info d-block">
          <% if @user.name.present? %>
          <%= @user.name %>
          <% else %>
            -
          <% end  %>
        </span>
      </li>
      <li>
        <% if true %>
        <span class="btn btn-sm btn-light btn-block btn-outline-info d-block">
          <% if @user.phone.present? %>
          <%= @user.phone %>
          <% else  %>
          <%=t(:not_inserted) %>
          <% end  %>
        </span>
        <% else %>
        <span class="btn btn-sm btn-light btn-block btn-outline-info d-block">
          card-no
				</span>
        <% end %>
      </li>
      <li>
        <%=link_to t(:photo_shoot),new_admin_user_picture_path(:user_id=>@user),{:target => '_blank', :class => 'btn btn-sm btn-outline-secondary btn-block btn-popup d-block'} %>
      </li>
      <li>
        <span id="photo_load" class="btn btn-sm btn-outline-secondary btn-block d-block"><%=t(:select_photo) %></span>
        <%= form_with(model: [:admin,UserPicture.new], local: true, html: {:id => 'form_photo', :style => 'display:none'}) do |form| %>
          <input type="hidden" name="user_id" value="<%=@user.id %>">
          <input type="file" name="photo[]" accept="image/*" capture="">
        <%= form.submit t(:upload_photo), :class => 'btn btn-sm btn-secondary btn-block' %>
        <% end %>
      </li>
      <% end %>
    </ul>
  </div>
</div>