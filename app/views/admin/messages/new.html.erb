<section id="new-message">
  <div class="row">
    <h2 class="col-12"><%= t(:new_message) %></h2>
  </div>
  <div class="row">
    <%= render :partial => 'layouts/notice', :locals => { :errors => @message.errors, :notice => notice, :alert => alert } %>
  </div>
  <div class="row">
    <div class="col-12">
      <%= render 'form', message: @message %>
    </div>
  </div>
</section>
