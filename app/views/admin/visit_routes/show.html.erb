<section id="show-visit-route" class="container">
  <div class="row">
    <h2 class="col-12"><%= t(:show_visit_route) %></h2>
  </div>
  <div class="row">
    <%= render :partial => 'layouts/notice', :locals => { :errors => @visit_route.errors, :notice => notice, :alert => alert } %>
  </div>
  <div class="row">
    <div class="col-12">
      <div class="card">
        <h3 class="card-header"><%=@visit_route.title %></h3>
        <div class="card-body">
          <div>
            <label><%= t(:description, scope: [:activerecord, :attributes, :visit_route]) %></label>
            <p><%=@visit_route.description %></p>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="row mt-3">
    <div class="col-12 col-xl-6">
      <%= link_to t(:link_list), admin_visit_routes_path, class: 'btn btn-secondary' %>
    </div>
    <div class="col-12 col-xl-6 text-end">
      <%= link_to t(:edit), edit_admin_visit_route_path(@visit_route), class: 'btn btn-secondary' %>
      <%= link_to t(:delete), admin_visit_route_path(@visit_route), class: 'btn btn-danger' %>
    </div>
  </div>
</section>
