<% if params[:popup].present? %>
  <div class="modal-header">
    <h5 class="modal-title"><%= t(:order_content, scope: [:activerecord, :models]) %></h5>
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
      <span aria-hidden="true">&times;</span>
    </button>
  </div>
  <div class="modal-body">
<% else %>
  <div class="container">
    <div class="row">
      <div class="col-12">
<% end %>

<div>
  <%= @order_content.content %>
</div>

<% if params[:popup].present? %>
  </div>
  <div class="modal-footer">
    <%= link_to t(:delete), admin_order_content_path(@order_content), :method => :delete, data: {:confirm => "You sure?" } , :title => "Delete #{@order_content}",:class=>"btn btn-danger" %>
    <button type="button" class="btn btn-secondary content-edit"><%= t(:edit) %></button>
    <button type="button" class="btn btn-secondary" data-dismiss="modal"><%= t(:close) %></button>
  </div>
<% else %>
  </div>
  </div>
<% end %>
